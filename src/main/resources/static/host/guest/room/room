function weekOverlapCheck(obj) {
    var chkObj = $("." + $(obj).attr("class"));
    var maxCnt = 1;
    var cnt = 0;

    $.each(chkObj, function(idx, key) {
        if(key.checked == true) cnt++;
    });

    if(cnt > maxCnt) {
        $(obj).attr("checked", false);
    }
}

</script>

